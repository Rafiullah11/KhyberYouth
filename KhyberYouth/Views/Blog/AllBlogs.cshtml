@model IEnumerable<KhyberYouth.Models.BlogPost>
@* @model List<KhyberYouth.ViewModel.BlogViewModel> *@




<section class="py-3 py-md-5">
    <div class="blog-single">
        <div class="container mt-lg-2">
            <div class="row">
                <div class="row col-lg-10 offset-1">
                    @foreach (var blog in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mt-3" style="height:400px; width:300px">
                                <img src="~/images/@blog.ImagePath" class="card-img-top img-fluid" style="height:200px; width:300px; ">
                                <div class="card-body">
                                    <h5 class="card-title">@blog.Title</h5>
                                    <p>
                                        @{
                                            var text = blog.Contents ?? string.Empty;
                                            var readMore = text.Length > 50 ? text.Substring(0, 50) + "..." : text;
                                        }
                                        @readMore
                                    </p>
                                    <a asp-action="Details" asp-controller="Blog" asp-route-id="@blog.Id" class="btn theme-btn">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
