@model IEnumerable<KhyberYouth.Models.Project>

<style>
    .project-list-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
    }

        .project-list-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.15);
        }

    /* Standardizes image height across all cards */
    .project-img-container {
        height: 200px;
        overflow: hidden;
    }

        .project-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

   
</style>

<header class="theme-color text-white text-center py-5 mb-5 shadow-sm">
    <div class="container">
        <h3 class="fw-light">Khyber Youth Welfare Organization</h3>
        <h1 class="display-6 fw-bold">Project List</h1>
    </div>
</header>

<div class="container pb-5">
    <div class="row justify-content-center">
        @* Using a single row with gutters for cleaner responsiveness *@
        <div class="col-lg-11">
            <div class="row g-4">
                @foreach (var project in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4 d-flex">
                        @* h-100 ensures all cards in a row have the same height *@
                        <div class="card project-list-card h-100 w-100 overflow-hidden d-flex flex-column">

                            <div class="project-img-container">
                                <img src="~/images/@project.ImagePath"
                                     class="card-img-top"
                                     alt="@project.Name"
                                     loading="lazy">
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold">@project.Name</h5>
                                <p class="card-text text-secondary flex-grow-1">
                                    @{
                                        var text = project.Description ?? "";
                                        var readMore = text.Length > 80 ? text.Substring(0, 80) + "..." : text;
                                    }
                                    @readMore
                                </p>
                                <div class="mt-3">
                                    <a asp-action="Details"
                                       asp-controller="Projects"
                                       asp-route-id="@project.Id"
                                       class="btn theme-btn w-100 fw-bold py-2">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>