@model KhyberYouth.Models.PaginatedList<Project>

<div class="container p-3 mt-lg-5">
    <!-- Header Section -->
    <div class="row pt-4">
        <div class="col-9">
            <h3 class="text-warning">Projects</h3>
        </div>
        <div class="col-3 text-end">
            <a asp-action="Create" asp-controller="Projects" class="btn theme-color theme-btn theme-btn-hover">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Project
            </a>
        </div>
    </div>

    <!-- Projects Grid -->
    <div class="row">
        @foreach (var project in Model)
        {
            var photoPath = "~/images/" + (project.ImagePath ?? "default-image.png");

            <div class="col-md-3 p-2">
                <div class="card" style="height:450px">
                    <!-- Project Image -->
                    <img asp-append-version="true" src="@photoPath" class="card-img-top" alt="@project.Name" style="width:100%; height:200px;" />

                    <!-- Project Details -->
                    <div class="card-body">
                        <h5 class="card-title">@project.Name</h5>
                        <p class="card-text">
                            <strong>Description:</strong> @(string.IsNullOrEmpty(project.Description) ? "No description available" : project.Description)<br />
                            <strong>Start Date:</strong> @project.StartDate.ToString("dd-MM-yyyy")<br />
                            @project.EndDate.ToString("dd-MM-yyyy") ?? "Ongoing"<br />
                            <strong>Completed:</strong>
                            <strong>Completed:</strong> @(project.IsCompleted ? "Yes" : "No")
                        </p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary m-1">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@project.Id" class="btn btn-info m-1">
                                <i class="fas fa-pen-to-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@project.Id" class="btn btn-danger m-1">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination Controls -->
    <div class="row mt-4">
        <div class="col-lg-12">
            <nav>
                <ul class="pagination justify-content-center">
                    <!-- Previous Button -->
                    @if (Model.HasPreviousPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                        </li>
                    }
                   
                    <!-- Page Numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                            <a class="page-link" asp-route-pageNumber="@i">@i</a>
                        </li>
                    }

                    <!-- Next Button -->
                    @if (Model.HasNextPage)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                        </li>
                    }
                  
                </ul>
            </nav>
        </div>
    </div>
</div>
