@model KhyberYouth.ViewModel.ProjectEditViewModel

@{
    ViewData["Title"] = "Edit Project";
    var photoPath = "~/images/" + (Model.ExistingImagePath ?? "placeholder.png");
}

<div class="container container-fluid mt-lg-5">
    <div class="container mt-lg-5">
        <div class="card shadow mb-4 theme-color col-md-10 offset-1">
            <div class="card-body text-center">
                <h4 class="text-light">Update Project</h4>
                <div class="d-flex justify-content-center gap-3 mt-3">
                </div>
            </div>
        </div>

        <form class="border border-warning shadow col-md-10 offset-1" enctype="multipart/form-data" asp-controller="Projects" asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ExistingImagePath" />

            <div class="row m-3">
                <div class="form-group col-md-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <div class="form-group col-md-6">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" type="date" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" type="date" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row m-3">
                <div class="form-group col-md-12">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control custom-file-input" type="file" />
                </div>
            </div>
            <div class="row m-3">
                <div class="form-group col-md-12">
                    <img asp-append-version="true" src="@photoPath" alt="Project Image" width="250" />
                </div>
            </div>

            <div class="row m-3">
                <div class="form-group col-md-6">
                    <label asp-for="IsCompleted" class="control-label"></label>
                    <input asp-for="IsCompleted" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="IsCompleted" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group m-4">
                <input type="submit" value="Update Project" class="btn theme-btn" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
