@model KhyberYouth.ViewModel.TeamDetailsViewModel

@{
    ViewData["Title"] = "Team Details";
    var photoPath = "~/images/" + (Model.ImagePath ?? "placeholder.png");
}

<style>
    /* Prevent cutting off heads */
    .team-detail-img {
        width: 100%;
        height: 100%;
        min-height: 400px;
        object-fit: cover;
        object-position: top; /* Prioritizes the head/face */
        border-radius: 12px 0 0 12px;
    }

    .info-label {
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.75rem;
        color: #6c757d;
        display: block;
        margin-bottom: 2px;
    }

    .info-value {
        font-size: 1.05rem;
        color: #212529;
        margin-bottom: 15px;
        display: block;
    }

    .info-icon {
        width: 35px;
        height: 35px;
        background: #fff8e1;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ffc107;
        margin-right: 12px;
    }

    .detail-item {
        display: flex;
        align-items: flex-start;
        padding: 8px 0;
    }

    @@media (max-width: 768px) {
        .team-detail-img {
            border-radius: 12px 12px 0 0;
            min-height: 300px;
        }
    }
</style>

<header class="theme-color text-white text-center py-5 shadow-sm">
    <div class="container">
        <h3>Khyber Youth Welfare Association (KYWA)</h3>
        <h1 class="display-6 fw-bold text-uppercase">Member Profile</h1>
    </div>
</header>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-5">
                        <img asp-append-version="true" src="@photoPath" class="team-detail-img" alt="@Model.Name">
                    </div>

                    <div class="col-md-7 p-4 p-md-5 bg-white">
                        <div class="mb-4">
                            <h2 class="fw-bold mb-1">@Model.Name</h2>
                            <span class="badge bg-warning text-dark px-3 rounded-pill">@Model.Dept Department</span>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6 detail-item">
                                <div class="info-icon"><i class="fas fa-graduation-cap"></i></div>
                                <div>
                                    <span class="info-label">Qualification</span>
                                    <span class="info-value">@Model.Qualification</span>
                                </div>
                            </div>

                            <div class="col-md-6 detail-item">
                                <div class="info-icon"><i class="fas fa-envelope"></i></div>
                                <div>
                                    <span class="info-label">Email</span>
                                    <span class="info-value">@Model.Email</span>
                                </div>
                            </div>

                            <div class="col-md-6 detail-item">
                                <div class="info-icon"><i class="fas fa-phone-alt"></i></div>
                                <div>
                                    <span class="info-label">Contact</span>
                                    <span class="info-value">@Model.PhoneNumber</span>
                                </div>
                            </div>

                            <div class="col-md-6 detail-item">
                                <div class="info-icon"><i class="fas fa-calendar-check"></i></div>
                                <div>
                                    <span class="info-label">Member Since</span>
                                    <span class="info-value">@Model.JoinedDate.ToString("MMMM dd, yyyy")</span>
                                </div>
                            </div>

                            <div class="col-12 detail-item">
                                <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
                                <div>
                                    <span class="info-label">Address</span>
                                    <span class="info-value">@Model.Address</span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 pt-3 border-top">
                            <a asp-controller="Team" asp-action="AllTeam" class="btn btn-outline-dark px-4 rounded-pill">
                                <i class="fas fa-arrow-left me-2"></i> Back to Team
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="container mt-5 pt-5 border-top">
    <div class="text-center mb-5">
        <h3 class="fw-bold">Other Team Members</h3>
        <hr class="w-25 mx-auto border-warning" style="height:3px; opacity:1">
    </div>
    @{
        ViewData["MaxItems"] = 4;
    }
    @await Component.InvokeAsync("Team", new { TeamMember = 4 })
</section>