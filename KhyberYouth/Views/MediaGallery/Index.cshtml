@model IEnumerable<KhyberYouth.Models.MediaGallery>


<div class="container p-3 mt-lg-5">
    <div class="container mt-lg-5">
        <div style="display:flex; justify-content:space-between; align-items:center;">
            <h2>Media Gallery</h2>
            <a asp-action="Create" class="btn theme-btn">Add Media</a>

        </div>
    </div>

    <div class="row">
        @foreach (var media in Model)
        {
            var photoPath = "~/images/" + (media.ImagePath ?? "images.png");

            <div class="col-md-3 p-2">
                <div class="card" style="height:450px">
                    <img asp-append-version="true" src="@photoPath" class="card-img-top" alt="Media Image" width="100%" height="300" />
                    <div class="card-body">
                        <h5 class="card-title">@media.Title</h5>
                        <p class="card-text">@media.Description</p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@media.Id" class="btn btn-primary m-1">
                                <i class="fas fa-eye"></i> 
                            </a>
                            <a asp-action="Edit" asp-route-id="@media.Id" class="btn btn-info m-1">
                                <i class="fas fa-pen-to-square"></i> 
                            </a>
                            <a asp-action="Delete" asp-route-id="@media.Id" class="btn btn-danger m-1">
                                <i class="fas fa-trash-alt"></i> 
                            </a>
                        </div>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@await Component.InvokeAsync("Brand")
