@model IEnumerable<KhyberYouth.ViewModel.VolunteerViewModel>

<style>
    /* Standardizes the profile image area */
    .volunteer-img-container {
        height: 300px;
        overflow: hidden;
        background-color: #f8f9fa;
    }

        .volunteer-img-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
        }

    /* Modern Card Effects */
    .volunteer-card {
        border: none;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.08);
        position: relative; /* Required for stretched-link */
    }

        .volunteer-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 25px rgba(0,0,0,0.15);
        }

            .volunteer-card:hover img {
                transform: scale(1.05);
            }

    /* Stretched link makes the entire card clickable */
    .stretched-link::after {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        z-index: 1;
        content: "";
    }
</style>



<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 justify-content-center">
            @foreach (var volunteer in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 d-flex">
                    <div class="card volunteer-card w-100 overflow-hidden">

                        <div class="volunteer-img-container">
                            <img src="~/images/@volunteer.ImagePath"
                                 alt="@volunteer.Name"
                                 onerror="this.src='/images/placeholder.png'">
                        </div>

                        <div class="card-body text-center d-flex flex-column">
                            <h5 class="fw-bold mb-1">@volunteer.Name</h5>
                            <small class="text-warning fw-bold text-uppercase mb-3" style="letter-spacing: 1px;">
                                Volunteer
                            </small>

                            <p class="text-muted small flex-grow-1">
                                <i class="fas fa-graduation-cap me-1"></i>
                                @(string.IsNullOrEmpty(volunteer.Qualification)
                                                            ? "Education details not provided"
                                                            : (volunteer.Qualification.Length > 60
                                                            ? volunteer.Qualification.Substring(0, 60) + "..."
                                                            : volunteer.Qualification))
                        </p>

                            <div class="mt-3">
                                <a asp-action="Details"
                                   asp-controller="Volunteers"
                                   asp-route-id="@volunteer.Id"
                                   class="btn theme-btn w-100 stretched-link">
                                    View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                        }
        </div>
    </div>
</section>