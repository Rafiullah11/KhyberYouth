@model IEnumerable<KhyberYouth.Models.MediaGallery>

<style>
    /* Professional Gallery Styling */
    .image-container {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        /* Force a consistent square aspect ratio for the container */
        aspect-ratio: 1 / 1;
    }

        .image-container:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.2);
        }

        .image-container .image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
        }

        .image-container:hover .image {
            transform: scale(1.1);
        }

    /* Modern Overlay: Slides up from bottom */
    .overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
        color: #ffffff;
        padding: 20px 10px;
        text-align: center;
        opacity: 0;
        transform: translateY(20px);
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .image-container:hover .overlay {
        opacity: 1;
        transform: translateY(0);
    }

    /* Modal Close Button Styling */
    .btn-close-white {
        position: absolute;
        top: 15px;
        right: 15px;
        z-index: 1051;
        background-color: #fff;
        border-radius: 50%;
        padding: 8px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center mb-5">
        <div class="col-12 col-md-8 col-lg-6 text-center">
            <h2 class="text-warning fw-bold text-uppercase tracking-wider">Media Gallery</h2>
            <p class="text-secondary">Explore our visual journey and community impact</p>
            <hr class="w-25 mx-auto border-warning border-3 opacity-100">
        </div>
    </div>

    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            int imageIndex = 0;
            @foreach (var icon in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="image-container" data-bs-toggle="modal" data-bs-target="#imageModal-@imageIndex">
                        <img src="~/images/@(icon.ImagePath ?? "default-image.png")"
                             class="image"
                             alt="@icon.Title"
                             loading="lazy" />
                        <div class="overlay">@icon.Title</div>
                    </div>
                </div>

                <div class="modal fade" id="imageModal-@imageIndex" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content bg-transparent border-0">
                            <div class="modal-body p-0 position-relative">
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                <img src="~/images/@(icon.ImagePath ?? "default-image.png")"
                                     class="img-fluid rounded shadow-lg"
                                     alt="@icon.Title" />
                                <div class="text-center text-white mt-3 fw-bold">@icon.Title</div>
                            </div>
                        </div>
                    </div>
                </div>
                imageIndex++;
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                <p class="mt-3 text-secondary">No images found in the gallery.</p>
            </div>
        }
    </div>
</div>