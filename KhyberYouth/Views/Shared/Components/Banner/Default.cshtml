@model IEnumerable<KhyberYouth.ViewModel.BannerDetailsViewModel>
@{
    int maxItems = (ViewData["MaxItems"] as int?) ?? Model.Count(); // Use all items if maxItems not specified
    var projectsToShow = Model.Take(maxItems); // Limit the items to the specified number
}

<section>
    <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                @foreach (var banner in projectsToShow)
                {
                    <img class="img-fluid" src="~/images/@(banner.ImagePath ?? "default-image.png")" alt="Banner Logo" style="height:500px; width:100%">
                }
            </div>
        </div>
    </div>
</section>
