@model IEnumerable<KhyberYouth.ViewModel.BannerDetailsViewModel>

<style>
    /* 1. Container Setup */
    .kywa-banner-wrapper {
        height: 600px; /* Professional Hero Height */
        overflow: hidden;
        background-color: #000;
        position: relative;
    }

    /* 2. The Ken Burns Animation (Zoom In then Out) */
    @@keyframes kenburns {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.15);
        }

        100% {
            transform: scale(1);
        }
    }

    /* 3. Apply to active carousel image */
    .carousel-item.active img {
        animation: kenburns 12s ease-in-out infinite;
        width: 100%;
        height: 600px;
        object-fit: cover;
    }

    /* 4. Smooth Fade Transition */
    .carousel-fade .carousel-item {
        transition-property: opacity;
    }

    /* 5. Dark Overlay for Professionalism */
    .carousel-item::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.5));
    }

    /* 6. Caption Styling */
    .carousel-caption {
        bottom: 20%;
        z-index: 10;
    }
</style>

<section>
    <div id="kywaHero" class="carousel slide carousel-fade kywa-banner-wrapper" data-bs-ride="carousel" data-bs-interval="6000">
        <div class="carousel-indicators">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <button type="button" data-bs-target="#kywaHero" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true"></button>
            }
        </div>

        <div class="carousel-inner">
            @{
                bool isFirst = true;
            }
            @foreach (var banner in Model)
            {
                <div class="carousel-item @(isFirst ? "active" : "")">
                    <img src="~/images/@(banner.ImagePath ?? "default-image.png")"
                         class="d-block w-100"
                         alt="@banner.Name"
                         asp-append-version="true">

                    <div class="carousel-caption d-none d-md-block">
                        <h1 class="display-3 fw-bold text-uppercase">@banner.Name</h1>
                        <div class="mt-3">
                            <span class="badge bg-warning text-dark px-3 py-2">KHYBER YOUTH WELFARE ASSOCIATION</span>
                        </div>
                    </div>
                </div>
                isFirst = false;
            }
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#kywaHero" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#kywaHero" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</section>