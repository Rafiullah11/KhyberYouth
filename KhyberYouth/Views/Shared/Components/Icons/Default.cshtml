@model IEnumerable<KhyberYouth.ViewModel.MainIconDetailsViewModel>

@if (Model != null && Model.Any())
{
    <div class="container mt-5">
        <div class="row">
            @foreach (var icon in Model)
            {
                /* Changed col-4 to col-12 col-md-4 for responsiveness */
                <div class="col-12 col-md-4 mb-4 mb-md-0">
                    <a asp-controller="@icon.ControllerName"
                       asp-action="@icon.ActionName"
                       class="text-decoration-none">
                        <div class="card text-center custom-card border-0">
                            <div class="card-body">
                                <h2 class="card-title mb-3 custom-title">@icon.Title.ToUpper()</h2>
                                <i class="@icon.Icons custom-icon icon-custom-hover"></i>
                                <p class="mt-3">@icon.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
}
else
{
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <a asp-controller="MediaGallery" asp-action="Media" class="text-decoration-none">
                    <div class="card text-center custom-card border-0">
                        <div class="card-body">
                            <h2 class="card-title fw-bold mb-3 custom-title">MEDIA</h2>
                            <i class="fa-solid fa-music custom-icon icon-custom-hover"></i>
                            <p class="mt-3">Explore our journey and see the impact we’re making together.</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <a asp-controller="Volunteers" asp-action="Create" data-toggle="modal" data-target="#myModal" class="text-decoration-none">
                    <div class="card text-center custom-card border-0">
                        <div class="card-body">
                            <h2 class="card-title fw-bold mb-3 custom-title text-warning">BECOME VOLUNTEER</h2>
                            <i class="fa-solid fa-bullhorn custom-icon icon-custom-hover text-warning"></i>
                            <p class="mt-3">Join us to make a difference! Volunteer today and help bring positive change..</p>
                        </div>
                    </div>
                </a>
            </div>

            <div class="col-12 col-md-4 mb-4 mb-md-0">
                <a asp-controller="Home" asp-action="Donation" class="text-decoration-none">
                    <div class="card text-center custom-card border-0">
                        <div class="card-body">
                            <h2 class="card-title fw-bold mb-3 custom-title">SEND DONATION</h2>
                            <i class="fa-solid fa-hand-holding-dollar custom-icon icon-custom-hover"></i>
                            <p class="mt-3">Your donation brings hope and change. Support our mission by donating now.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
}