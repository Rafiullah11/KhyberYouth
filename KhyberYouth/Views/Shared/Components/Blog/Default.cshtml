@model IEnumerable<KhyberYouth.ViewModel.BlogDetailsViewModel>
@{
    int maxItems = (ViewData["MaxItems"] as int?) ?? Model.Count();
    var blogsToShow = Model.Take(maxItems);
}

<section class="py-3 py-md-5">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                <h2 class="fs-6 text-secondary mb-2 text-uppercase text-center">Latest Blogs</h2>
                <h3 class="display-8 mb-1 mb-md-1 text-center">Stay Updated with Our Latest Posts</h3>
                <hr class="w-50 mx-auto mb-2 mb-xl-4 border-dark-subtle">
            </div>
        </div>
    </div>

    <div class="container overflow-hidden">
        @* Added g-4 for consistent spacing between cards when they stack *@
        <div class="row g-4">
            @foreach (var blog in blogsToShow)
            {
                @* Changed to col-12 for mobile, col-md-6 for tablet, col-lg-4 for desktop *@
                <div class="col-12 col-md-6 col-lg-4">
                    <article class="h-100">
                        @* Removed style="height:500px" and added h-100 *@
                        <div class="card border-0 h-100 shadow-sm">
                            <figure class="card-img-top m-0 overflow-hidden bsb-overlay-hover">
                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">
                                    @* Added w-100 and object-fit: cover to maintain image ratio *@
                                    <img class="img-fluid bsb-scale bsb-hover-scale-up custom-img-size w-100"
                                         loading="lazy"
                                         src="~/images/@blog.ImagePath"
                                         style="height:250px; object-fit: cover;">
                                </a>
                                <figcaption>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-eye text-white bsb-hover-fadeInLeft" viewBox="0 0 16 16">
                                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z" />
                                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 1 1-7 0z" />
                                    </svg>
                                    <h4 class="h6 text-white bsb-hover-fadeInRight mt-2">Read More</h4>
                                </figcaption>
                            </figure>
                            <div class="card-body border bg-white p-4">
                                <div class="entry-header mb-3">
                                    <ul class="entry-meta list-unstyled d-flex mb-2">
                                        <li>
                                            <a class="link-primary text-decoration-none small fw-bold text-uppercase" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">Blog</a>
                                        </li>
                                    </ul>
                                    <h2 class="card-title entry-title h5 mb-0">
                                        <a class="link-dark text-decoration-none fw-bold" asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id">@blog.Title</a>
                                    </h2>
                                </div>
                                <p class="card-text entry-summary text-secondary">
                                    @(blog.Contents?.Length > 100 ? blog.Contents.Substring(0, 100) + "..." : blog.Contents)
                                </p>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>