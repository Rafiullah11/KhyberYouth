@model IEnumerable<KhyberYouth.ViewModel.TeamDetailsViewModel>
@{
    int maxItems = (ViewData["MaxItems"] as int?) ?? Model.Count();
    var projectsToShow = Model.Take(maxItems);
}

<style>
    /* Card Container Logic */
    .team-item {
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        border: none;
        border-radius: 12px;
        position: relative; /* Essential for stretched-link */
    }

    .team-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.12) !important;
    }

    /* Image Control */
    .img-wrapper {
        height: 320px; /* Fixed height for a clean grid */
        overflow: hidden;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .img-wrapper img {
        transition: transform 0.6s ease;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .team-item:hover .img-wrapper img {
        transform: scale(1.1);
    }

    /* Branding & Badges */
    .dept-badge {
        font-size: 0.7rem;
        letter-spacing: 1.5px;
        font-weight: 700;
        color: #ffc107;
        text-transform: uppercase;
        display: block;
    }

    /* Clickable Card Link */
    .stretched-link::after {
        position: absolute;
        top: 0; right: 0; bottom: 0; left: 0;
        z-index: 1;
        content: "";
    }

    @@media (max-width: 768px) {
        .img-wrapper {
            height: 280px;
        }
    }
</style>

