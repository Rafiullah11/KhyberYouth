<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4 justify-content-center">
            @foreach (var member in projectsToShow)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex">
                    <div class="card shadow-sm h-100 team-item w-100">
                        
                        <div class="img-wrapper">
                            <img class="card-img-top"
                                 loading="lazy"
                                 src="~/images/@(member.ImagePath ?? "default-team.png")"
                                 alt="@member.Name">
                        </div>

                        <div class="card-body d-flex flex-column text-center p-4">
                            <span class="dept-badge mb-2">@member.Dept</span>
                            <h5 class="card-title fw-bold text-dark mb-3">@member.Name</h5>
                            
                            <div class="mt-auto pt-3 border-top">
                                <a asp-controller="Team" asp-action="Details" asp-route-id="@member.Id"
                                   class="stretched-link text-decoration-none text-dark small fw-bold">
                                   VIEW DETAILS <i class="fas fa-arrow-right ms-1 text-warning"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>