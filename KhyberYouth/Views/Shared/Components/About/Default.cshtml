@model IEnumerable<KhyberYouth.ViewModel.AboutDetailsViewModel>

@{
    int maxItems = (ViewData["MaxItems"] as int?) ?? Model.Count();
    var projectsToShow = Model.Take(maxItems);
}

<div class="container py-4">

    @foreach (var aboutSection in projectsToShow)
    {
        <div class="row align-items-center gx-lg-5">
            <div class="col-12 col-lg-6 mb-4 mb-lg-0">
                <div class="position-relative overflow-hidden rounded shadow-sm">
                    <img src="~/images/@(aboutSection.ExistingMainImagePath ?? "default-image.png")"
                         alt="@aboutSection.SectionTitle"
                         class="img-fluid w-100"
                         style="max-height:550px; object-fit:cover; display: block;">
                </div>
            </div>

            <div class="col-12 col-lg-6">
                @* text-center on mobile, text-lg-start on desktop for a professional look *@
                <div class="p-1 p-lg-2 text-center text-lg-start">

                    <h2 class="fw-bold mb-3 display-6">
                        @aboutSection.DescriptionTitle
                    </h2>

                    <p class="text-muted"
                       style="font-size:1.00rem; line-height:1.5;">
                        <strong class="text-dark">Khyber Youth Welfare Association</strong> –
                        @aboutSection.Description
                    </p>

                    <div class="d-flex align-items-center justify-content-center justify-content-lg-start mt-4 flex-nowrap">

                        <div class="flex-shrink-0 me-3">
                            <img src="~/images/@(aboutSection.ExistingFounderImagePath ?? "default-image.png")"
                                 alt="@aboutSection.FounderName"
                                 class="rounded-circle border"
                                 style="width:80px; height:80px; object-fit:cover;">
                        </div>

                        <div class="text-start">
                            <h6 class="mb-0 fw-bold fs-5">
                                @aboutSection.FounderName
                            </h6>
                            <p class="text-secondary mb-0 small text-uppercase tracking-wider">
                                @aboutSection.FounderTitle
                            </p>
                        </div>

                    </div>

                </div>
            </div>

        </div>
    }

</div>