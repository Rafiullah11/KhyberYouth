@model KhyberYouth.ViewModel.AboutDetailsViewModel

@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.ExistingImagePath ?? "placeholder.png");
}

<div class="container container-fluid mt-lg-5">
        <div class="card shadow mb-4 theme-color col-md-10 offset-1">
            <div class="card-body text-center">
                <h4 class="text-light">About Section</h4>
            </div>
        </div>
    <div class="container col-md-10 offset-1 border border-warning shadow">
        <div class="row">
            <div class="col-md-4">
                <div class="row m-3">
                    <div class="form-group col-md-12">
                        <img asp-append-version="true" src="@photoPath" alt="Media Image" width="250" />
                    </div>
                </div>
            </div>
            <div class="col-md-8">

                <div class="p-4">
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.SectionTitle)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.SectionTitle)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.SectionContent)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.SectionContent)
                        </dd>
                      
                    </dl>
                    
                </div>
            </div>
        </div>
        <div class="form-group m-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn theme-btn">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
