@model IEnumerable<KhyberYouth.Models.AboutUs>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 mt-lg-5">
    <div class="row pt-4">
        <div class="col-9">
            <h3 class="text-warning">About Us Sections</h3>
        </div>
        <div class="col-3 text-end">
            <a asp-action="Create" asp-controller="AboutUs" class="btn theme-btn">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Section
            </a>
        </div>
        <hr/>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().SectionTitle)</th>
                <th>@Html.DisplayNameFor(model => model.First().SectionContent)</th>
                <th>Image</th>
                <th></th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var photoPath = Url.Content("~/images/" + (item.ImagePath ?? "default-image.png"));
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SectionTitle)</td>
                    <td>
                        @{
                            var content = item.SectionContent;
                            var truncatedContent = content.Length > 50 ? content.Substring(0, 50) + "..." : content;
                        }
                        @truncatedContent
                    </td>
                    <td>
                        <img src="@photoPath" class="img-thumbnail" width="50px" height="100px" alt="Section Image" />
                    </td>
                    <td></td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i></a> |
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pen-to-square"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
