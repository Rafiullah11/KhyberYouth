@model KhyberYouth.ViewModel.BannerCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container container-fluid mt-lg-5 ">
    <div class="container mt-lg-5 ">
        <div class="card shadow mb-4 theme-color col-md-10 offset-1">
            <div class="card-body text-center">
                <h4 class="text-light">Add a banner picture</h4>
                <div class="d-flex justify-content-center gap-3 mt-3">
                </div>
            </div>
        </div>

        <form class=" border border-warning shadow col-md-10 offset-1 " enctype="multipart/form-data" asp-controller="Banner" asp-action="Create" method="post">

            <div class="row m-3">
                <div class="form-group col-lg-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
           
            <div class="row m-3">
                <div class="form-group col-lg-12">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control custom-file-input" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group m-4">
                <input type="submit" value="Create" class="btn theme-btn" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

