@model KhyberYouth.ViewModel.ContactViewModel

<!-- Uncomment the Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />





<div class="container my-5">
    <!-- Contact Us Card -->
    <div class="row ">
        <div class="card shadow mb-4 theme-color text-light col-lg-12">
            <div class="card-body text-center">
                <h4 class="text-light">Contact Us</h4>
                <p>Please fill out the form below to send us a message.</p>
            </div>
        </div>
    </div>
    <!-- Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center ">
            @TempData["SuccessMessage"]
        </div>
    }
    @*
    <div class="container my-5"> *@

    <div class="row ">
        <div class="col-lg-5">
            <div class=" border border-warning shadow p-lg-2"  style="height: 500px;">
                <iframe style="height: 480px; width:100%" class="embed-responsive-item"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3153.0936436261343!2d-122.4194151846814!3d37.77492917975954!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80858064d10a4a1f%3A0xc0f0c0c0c0c0c0c0!2sSan%20Francisco%2C%20CA%2C%20USA!5e0!3m2!1sen!2sus!4v1605135065695!5m2!1sen!2sus"
                        allowfullscreen loading="lazy"></iframe>
            </div>
        </div>
        <div class="col-lg-7">
            <form class="border border-warning shadow col-lg-12  mb-5 p-4" enctype="multipart/form-data" asp-controller="Contact" asp-action="ContactUs" method="post">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label text-dark">Full Name</label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-dark">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Subject" class="form-label text-dark">Subject</label>
                    <input asp-for="Subject" class="form-control" placeholder="Subject" />
                </div>
                <div class="mb-3">
                    <label asp-for="Message" class="form-label text-dark">Message</label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="Enter your message"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <button type="submit" class="btn theme-btn">Send Message</button>
            </form>
        </div>
    </div>
    @* </div> *@

    <div class="col-lg-12">
        <div class="card mt-4 border-0 mb-4">
            <div class="row">
                <div class="col-lg-4 col-md-4">
                    <div class="card-body d-flex align-items-center c-detail pl-0">
                        <div class="m-3 align-self-center">
                            <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon1.png">
                        </div>
                        <div class="">
                            <h6 class="font-weight-medium">Address</h6>
                            <p>Deans Trad Center.<br> Peshawar Pakistan</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="card-body d-flex align-items-center c-detail">
                        <div class="m-3 align-self-center">
                            <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon2.png">
                        </div>
                        <div class="">
                            <h6 class="font-weight-medium">Phone</h6>
                            <p>251 546 9442<br> 630 446 8851</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4">
                    <div class="card-body d-flex align-items-center c-detail">
                        <div class="m-3 align-self-center">
                            <img src="https://www.wrappixel.com/demos/ui-kit/wrapkit/assets/images/contact/icon3.png">
                        </div>
                        <div class="">
                            <h6 class="font-weight-medium">Email</h6>
                            <p>info@kywo.com<br> 123@wrappixel.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

