@model KhyberYouth.ViewModel.VolunteerCreateViewModel

@{
    ViewData["Title"] = "Join KYWA";
}

<style>
    .form-section-title {
        border-left: 4px solid #ffc107;
        padding-left: 15px;
        margin-bottom: 25px;
        font-weight: bold;
        color: #333;
    }

    .form-card {
        background: #fff;
        border-radius: 15px;
        border: none;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1) !important;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px 15px;
        border: 1px solid #dee2e6;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #ffc107;
            box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
        }

    .upload-box {
        border: 2px dashed #dee2e6;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        background: #f8f9fa;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .upload-box:hover {
            background: #e9ecef;
        }
</style>

<header class="theme-color text-white text-center py-5 mb-5 shadow-sm">
    <div class="container">
        <h3>Khyber Youth Welfare Association (KYWA)</h3>
        <h1 class="display-6 fw-bold">Become a Volunteer</h1>
        <p class="lead opacity-75">Join our community and make a difference today.</p>
    </div>
</header>

<div class="container mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card form-card">
                <div class="card-body p-4 p-md-5">

                    <form enctype="multipart/form-data" asp-controller="Volunteers" asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <h5 class="form-section-title">Personal Details</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold small"></label>
                                <input asp-for="Name" class="form-control" placeholder="Full Name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Qualification" class="form-label fw-bold small"></label>
                                <input asp-for="Qualification" class="form-control" placeholder="e.g. Masters in Social Work" />
                                <span asp-validation-for="Qualification" class="text-danger small"></span>
                            </div>
                        </div>

                        <h5 class="form-section-title">Contact Information</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold small"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-envelope text-muted"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-bold small"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light"><i class="fas fa-phone text-muted"></i></span>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="+92 XXX XXXXXXX" />
                                </div>
                                <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                            </div>
                        </div>

                        <h5 class="form-section-title">Registration Details</h5>
                        <div class="row g-4 mb-4">
                            <div class="col-md-8">
                                <label asp-for="Address" class="form-label fw-bold small"></label>
                                <input asp-for="Address" class="form-control" placeholder="Street Address, City, Country" />
                                <span asp-validation-for="Address" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="JoinedDate" class="form-label fw-bold small"></label>
                                <input asp-for="JoinedDate" class="form-control" type="date" />
                                <span asp-validation-for="JoinedDate" class="text-danger small"></span>
                            </div>
                        </div>

                        <h5 class="form-section-title">Profile Picture</h5>
                        <div class="row mb-5">
                            <div class="col-12">
                                <div class="upload-box">
                                    <i class="fas fa-cloud-upload-alt fa-2x text-warning mb-2"></i>
                                    <p class="mb-2 fw-bold small">Click to upload or drag and drop</p>
                                    <input asp-for="ImageFile" class="form-control" type="file" />
                                    <span asp-validation-for="ImageFile" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end border-top pt-4">
                            <a asp-action="Index" class="btn btn-light px-4 py-2 me-md-2">Cancel</a>
                            <button type="submit" class="btn theme-btn px-5 py-2 fw-bold text-uppercase">
                                Submit Application
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}