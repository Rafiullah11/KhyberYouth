@model IEnumerable<KhyberYouth.Models.Volunteer>

<div class="container p-3 mt-lg-5">
    <div class="row pt-4">
        <div class="col-9">
            <h3 class="text-warning">Volunteers</h3>
        </div>
        <div class="col-3 text-end">
            <a asp-action="Create" asp-controller="Volunteer" class="btn theme-btn">
                <i class="bi bi-plus-circle"></i> &nbsp; Add Volunteer
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var volunteer in Model)
        {
            var photoPath = "~/images/" + (volunteer.ImagePath ?? "default-image.png"); // Use a default image if none is provided

            <div class="col-md-3 p-2">
                <div class="card" style="height:450px">
                    <img asp-append-version="true" src="@photoPath" class="card-img-top" alt="@volunteer.Name" width="200" height="250" />
                    <div class="card-body">
                        <h5 class="card-title">@volunteer.Name</h5>
                        <p class="card-text">
                            <strong>Qualification:</strong> @volunteer.Qualification<br />
                            <strong>Email:</strong> @volunteer.Email<br />
                            <strong>Phone:</strong> @volunteer.PhoneNumber<br />
                            <strong>Address:</strong> @volunteer.Address<br />
                            <strong>Joined Date:</strong> @volunteer.JoinedDate.ToString("dd-MM-yyyy")
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@volunteer.Id" class="btn btn-primary m-1">
                                <i class="fas fa-eye"></i> View
                            </a>
                            <a asp-action="Edit" asp-route-id="@volunteer.Id" class="btn btn-info m-1">
                                <i class="fas fa-pen-to-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@volunteer.Id" class="btn btn-danger m-1">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
