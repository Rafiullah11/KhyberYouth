<style>
  /*   .theme-color {
        background-color: #003366;
    } */
    /* Example theme color */
    .theme-btn {
        background-color: #ffc107;
        color: #000;
        font-weight: bold;
        border: none;
    }

        .theme-btn:hover {
            background-color: #e0a800;
        }

    /* Interactive Card Styles */
    .interactive-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-top: 4px solid #ffc107; /* Warning color top border */
    }

        .interactive-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.15) !important;
        }

    .icon-box {
        font-size: 2.5rem;
        margin-bottom: 15px;
        color: #ffc107;
        transition: transform 0.3s ease;
    }

    .interactive-card:hover .icon-box {
        transform: scale(1.1);
    }
</style>
@{
      ViewData["Title"] = "Home Page";
}

<div class="container-fluid p-0">
    
    <div>
        @{
            ViewData["MaxItems"] = 1; // Set the number of items to display
        }
        @await Component.InvokeAsync("Banner", new { Banner = 1 })

    </div>

    <!-- Start Working Since section -->

    <div class="container mt-3 col-lg-12">
        <div>
            <div class="row justify-content-md-center">
                <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
                    <h2 class="text-secondary mb-2 text-uppercase text-center"> Our Mission</h2>
                    <h6 class="text-center">To empower the less privileged through education, and community engagement</h6>
                    <hr class="w-50 mx-auto border-dark-subtle">
                </div>
            </div>
        </div>
        
        <div>
            @{
                ViewData["MaxItems"] = 1; // Set the number of items to display
            }
            @await Component.InvokeAsync("About", new { AboutSection = 1 })

        </div>
    </div>
    <!-- END Working Since section -->

    <!-- Media, Volunteer and Donation Section Start -->
    <div class="container mt-5">
        <div>
            @{
                ViewData["MaxItems"] = 3; // Set the number of items to display
            }
            @await Component.InvokeAsync("Icons", new { MainIcons = 3 })

        </div>
    </div>
    <!-- Media, Volunteer and Donation Section Start -->


    <div>
        <!-- Blog 3 - Bootstrap Brain Component -->
        <section class="py-3 py-md-5">

            @{
                ViewData["MaxItems"] = 3; // Set the number of items to display
            }
            @await Component.InvokeAsync("Project", new { Project = 3 })
           
        </section>

        <!-- Event Section Start -->
        <section class="container-fluid">
            
                 @await Component.InvokeAsync("Event") 
        </section>
        <!-- Event Section End -->

        <!--D HELP VOLUNTEER TEAM START-->
        <section class="d-help-volunteer-team">
           
            @{
                ViewData["MaxItems"] = 4; // Set the number of items to display
            }
            @await Component.InvokeAsync("Team", new { TeamMember = 4 })
        </section>
        <!--D HELP VOLUNTEER TEAM END-->

        <!--What we do section-->
        <section class="container my-2 py-2">
            <h2 class="text-warning text-center mb-5 fw-bold text-uppercase">What We Do</h2>
            <div class="row g-4">
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm interactive-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-box">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <h5 class="card-title fw-bold">Scholarships & Awards</h5>
                            <p class="card-text text-muted small">Providing educational scholarships and recognizing achievements to encourage academic success.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm interactive-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-box">
                                <i class="fas fa-hands-helping"></i>
                            </div>
                            <h5 class="card-title fw-bold">Community Aid</h5>
                            <p class="card-text text-muted small">Helping underprivileged families with essentials, focusing on orphans and those in need.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm interactive-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-box">
                                <i class="fas fa-users"></i>
                            </div>
                            <h5 class="card-title fw-bold">Youth Empowerment</h5>
                            <p class="card-text text-muted small">Organizing recreational events and leadership programs to foster confidence and unity.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="card h-100 shadow-sm interactive-card">
                        <div class="card-body text-center p-4">
                            <div class="icon-box">
                                <i class="fas fa-lightbulb"></i>
                            </div>
                            <h5 class="card-title fw-bold">Skill Development</h5>
                            <p class="card-text text-muted small">Conducting workshops to equip youth with valuable skills for sustainable careers.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>


       <!--Blog Section start-->
        <section class=" py-md-2">
           
            @{
                ViewData["MaxItems"] = 3; // Set the number of items to display
            }
            @await Component.InvokeAsync("Blog", new { Blogs = 3 }) 

        </section>
       
        <!--Brand logo slider-->
        <section>
          
            @await Component.InvokeAsync("Brand")
        </section>  

    </div>
</div>


