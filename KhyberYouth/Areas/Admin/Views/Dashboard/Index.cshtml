@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    /* Custom Styling for Modern Dashboard Cards */
    .stat-card {
        border: none;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        background: #fff;
    }

    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }

    .icon-shape {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        margin: 0 auto 15px;
    }

    /* Button Styling */
    .btn-action {
        border-radius: 8px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.75rem;
    }

    /* Theme colors for icons */
    .bg-soft-primary { background-color: #e7f1ff; color: #0d6efd; }
    .bg-soft-success { background-color: #e1f7ed; color: #198754; }
    .bg-soft-warning { background-color: #fff8e6; color: #ffc107; }

    .welcome-banner {
        background: linear-gradient(90deg, #343a40 0%, #4b545c 100%);
        color: white;
        border-radius: 15px;
    }
</style>

<div class="container-fluid py-4">
