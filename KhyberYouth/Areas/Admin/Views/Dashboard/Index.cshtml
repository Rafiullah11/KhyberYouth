    <!-- Welcome Section -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-body text-center">
            <h3 class="fw-bold text-primary">Welcome, Admin!</h3>
            <p class="text-muted">Manage your website efficiently with the tools available in this panel.</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-shape bg-soft-primary">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-2 text-dark">User Management</h5>
                    <p class="text-muted small mb-4">Add, edit, or remove staff accounts and manage permissions.</p>
                    <a asp-area="Admin" asp-action="ListUser" asp-controller="Administration" 
                       class="btn btn-primary btn-action w-100 shadow-sm">
                        Manage Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-shape bg-soft-success">
                        <i class="fas fa-user-shield fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-2 text-dark">Access Roles</h5>
                    <p class="text-muted small mb-4">Define security levels and assign roles to system users.</p>
                    <a asp-area="Admin" asp-action="ListRole" asp-controller="Administration" 
                       class="btn btn-success btn-action w-100 shadow-sm text-white">
                        Manage Roles
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card stat-card shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="icon-shape bg-soft-warning">
                        <i class="fas fa-key fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-2 text-dark">Account Security</h5>
                    <p class="text-muted small mb-4">Keep your account safe by updating your login credentials.</p>
                    <a asp-area="Admin" asp-action="ResetPassword" asp-controller="Account" 
                       class="btn btn-warning btn-action w-100 shadow-sm text-dark">
                        Update Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>