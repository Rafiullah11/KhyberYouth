@model KhyberYouth.Models.BankAccountDetail

<div class="container my-5">
    <!-- Header Section -->
    
    <div class="row justify-content-md-center">
        <div class="col-12 col-md-10 col-lg-8 col-xl-7 col-xxl-6">
            <h2 class="text-warning mb-2 text-uppercase text-center"> Your support can save a life.</h2>
            <hr class="w-50 mx-auto mb-2 mb-xl-9 border-dark-subtle">
        </div>
    </div>

    <div class="card col-md-10 offset-1 shadow border border-warning p-lg-3">
        <table class="table table-striped table-warning table-hover border border-warning">
            <tbody class="p-0">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AccountTitle)</th>
                    <td>@Html.DisplayFor(model => model.AccountTitle)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.AccountNumber)</th>
                    <td>@Html.DisplayFor(model => model.AccountNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IbanNumber)</th>
                    <td>@Html.DisplayFor(model => model.IbanNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CurrencyType)</th>
                    <td>@Html.DisplayFor(model => model.CurrencyType)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BankName)</th>
                    <td>@Html.DisplayFor(model => model.BankName)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BranchCode)</th>
                    <td>@Html.DisplayFor(model => model.BranchCode)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.SwiftCode)</th>
                    <td>@Html.DisplayFor(model => model.SwiftCode)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BankAddress)</th>
                    <td>@Html.DisplayFor(model => model.BankAddress)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ContactPhoneNumber)</th>
                    <td>@Html.DisplayFor(model => model.ContactPhoneNumber)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
