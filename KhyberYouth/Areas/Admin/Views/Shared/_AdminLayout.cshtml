@using KhyberYouth.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KhyberYouth</title>

    <!-- Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick-theme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhyberYouth.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            position: fixed; /* Keeps it fixed while scrolling */
            top: 40px; /* Adjust based on navbar height */
            left: 0;
            height: calc(100vh - 56px); /* Full height minus navbar */
            width: 250px; /* Adjust width as needed */
            overflow-y: auto; /* Enables vertical scrolling */
            background-color: #343a40; /* Dark background */
            padding-top: 10px;
        }

        /* Ensure the content area doesn't overlap the sidebar */
        .main-content {
            margin-left: 250px; /* Adjust to match sidebar width */
            padding: 20px;
        }

        .topnav-bg-color{
            background-color: #343a40;
            color: white;
        }
        .admin-panel{
            padding-left:13px !important;
        }

        .hr-line {
            margin-top: 0.5rem !important;
            margin-bottom: 0.5rem !important;
            opacity: 0.75 !important;
        }


    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="sb-topnav navbar navbar-expand navbar-light topnav-bg-color fixed-top">
        <i class='bx bx-menu text-white'></i> <!-- Ensure the menu icon is visible -->
        <h4 class="text-center admin-panel">Admin Panel</h4>
        <div class="ms-auto">
            <ul class="navbar-nav">
                @if (signInManager.IsSignedIn(User))
                {
                    <li class="nav-item text-white">
                        Welcome, @User.Identity.Name
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-area="Admin" asp-action="Logout" asp-controller="Account">
                            <button type="submit" class="nav-link btn btn-link py-0 text-white">
                                <i class="fas fa-sign-out-alt text-white"></i>
                            </button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="text-white nav-link" asp-area="Admin" asp-action="Register" asp-controller="Account">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="text-white nav-link" asp-area="Admin" asp-action="Login" asp-controller="Account">Login</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container-fluid mt-lg-4">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 mt-lg-2 d-none d-md-block sidebar overflow-auto">
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tachometer-alt "></i> <span class="admin-panel"></span> Dashboard
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Blog" asp-action="Index">
                    <i class="fas fa-blog"></i> <span class="admin-panel"></span> Blog
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="MediaGallery" asp-action="Index">
                    <i class="fas fa-images"></i> <span class="admin-panel"></span> Media
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Projects" asp-action="Index">
                    <i class="fas fa-tasks"></i> <span class="admin-panel"></span> Projects
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Event" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i> <span class="admin-panel"></span> Events
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Volunteers" asp-action="Index">
                    <i class="fas fa-hands-helping"></i> <span class="admin-panel"></span> Volunteers
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Team" asp-action="Index">
                    <i class="fas fa-users"></i> <span class="admin-panel"></span> Team
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="AboutSection" asp-action="Index">
                    <i class="fas fa-info-circle"></i> <span class="admin-panel"></span> About Us
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="BankAccountDetails" asp-action="Index">
                    <i class="fas fa-donate"></i> <span class="admin-panel"></span> Donate Us
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Brand" asp-action="Index">
                    <i class="fas fa-tags"></i> <span class="admin-panel"></span> Brand
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="MainIcons" asp-action="Index">
                    <i class="fas fa-icons"></i> <span class="admin-panel"></span> Main Icons
                </a>
                <hr class="bg-light hr-line" />
                <a class="nav-link text-light" asp-area="Admin" asp-controller="Banner" asp-action="Index">
                    <i class="fas fa-flag"></i> <span class="admin-panel"></span> Banner
                </a>

                <hr class="bg-light hr-line" />

               
                <a class="nav-link text-light" href="/">
                    <i class="fas fa-arrow-left"></i> <span class="admin-panel"></span> Back to Website
                </a>
            </nav>

            <!-- Main Content -->
            <main class="mt-2 col-md-10 ms-sm-auto px-4">
                <h2 class="mt-4">@ViewData["Title"]</h2>
                <hr />
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel/slick/slick.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.20/summernote-bs5.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
