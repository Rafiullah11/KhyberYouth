@using KhyberYouth.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] KYWA</title>
    <link rel="icon" type="image/png" class="logo-pic" href="@Url.Content("~/images/KYWA_LOGO.PNG")">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
            background-color: #f8f9fa;
        }

        /* Navbar Styling */
        .topnav-bg-color {
            background-color: #343a40;
            z-index: 1031; /* Above sidebar */
        }

        /* Sidebar Styling */
        .sidebar {
            position: fixed;
            top: 56px;
            left: 0;
            height: calc(100vh - 56px);
            width: 250px;
            z-index: 1030;
            background-color: #343a40;
            transition: all 0.3s ease-in-out;
            overflow-y: auto;
            padding-top: 1rem;
        }

        /* Content Area */
        .main-content {
            margin-left: 250px;
            margin-top: 56px;
            padding: 20px;
            transition: all 0.3s ease-in-out;
            min-height: 100vh;
        }

        /* Responsive Behavior */
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -250px; /* Hide by default on mobile */
            }

                .sidebar.active {
                    margin-left: 0; /* Slide in when active */
                }

            .main-content {
                margin-left: 0; /* Full width on mobile */
            }
        }

        /* Sidebar Links Styling */
        .sidebar .nav-link {
            color: #ced4da;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            border-radius: 4px;
            margin: 0 10px;
        }

            .sidebar .nav-link:hover {
                color: #fff;
                background-color: rgba(255, 255, 255, 0.1);
            }

            .sidebar .nav-link i {
                width: 25px;
                font-size: 1.1rem;
            }

        .hr-line {
            margin: 0.5rem 15px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            opacity: 1;
        }

        #sidebarToggle {
            font-size: 1.25rem;
            border: none;
            outline: none;
        }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand navbar-dark topnav-bg-color fixed-top shadow-sm">
        <div class="container-fluid">
            <button class="btn btn-link text-white me-2" id="sidebarToggle" type="button">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand fw-bold" href="#">Admin Panel</a>

            <div class="ms-auto">
                <ul class="navbar-nav">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item text-white d-none d-sm-flex align-items-center me-3">
                            <small>Hi, @User.Identity.Name</small>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-area="Admin" asp-action="Logout" asp-controller="Account">
                                <button type="submit" class="btn btn-sm btn-outline-light">
                                    <i class="fas fa-sign-out-alt"></i>
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="d-flex">
        <nav id="sidebar" class="sidebar shadow">
            <div class="nav flex-column">
                <a class="nav-link" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
                <div class="hr-line"></div>

                <a class="nav-link" asp-area="Admin" asp-controller="Blog" asp-action="Index">
                    <i class="fas fa-blog"></i> Blog
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="MediaGallery" asp-action="Index">
                    <i class="fas fa-images"></i> Media
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Projects" asp-action="Index">
                    <i class="fas fa-tasks"></i> Projects
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Event" asp-action="Index">
                    <i class="fas fa-calendar-alt"></i> Events
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Volunteers" asp-action="Index">
                    <i class="fas fa-hands-helping"></i> Volunteers
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Team" asp-action="Index">
                    <i class="fas fa-users"></i> Team
                </a>
                
                <a class="nav-link " asp-area="Admin" asp-controller="BankAccountDetails" asp-action="Index">
                    <i class="fas fa-donate"></i> <span class=""></span> Donate Us
                </a>
                
                <a class="nav-link" asp-area="Admin" asp-controller="MainIcons" asp-action="Index">
                    <i class="fas fa-icons"></i> <span class=""></span> Main Icons
                </a>
                <a class="nav-link " asp-area="Admin" asp-controller="Brand" asp-action="Index">
                    <i class="fas fa-tags"></i> <span class="admin-panel"></span> Brand
                </a>
                <a class="nav-link" asp-area="Admin" asp-controller="Banner" asp-action="Index">
                    <i class="fas fa-flag"></i> <span class=""></span> Banner
                </a>
                <div class="hr-line"></div>
                <a class="nav-link" asp-area="Admin" asp-controller="AboutSection" asp-action="Index">
                    <i class="fas fa-info-circle"></i> About Us
                </a>
                <a class="nav-link text-warning" href="/">
                    <i class="fas fa-arrow-left"></i> Exit Admin
                </a>
            </div>
        </nav>

        <main class="main-content w-100">
            <div class="container-fluid bg-white p-4 shadow-sm rounded">
                @RenderBody()
            </div>
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Use DOMContentLoaded to ensure the elements exist before attaching events
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById('sidebar');
            const toggleBtn = document.getElementById('sidebarToggle');

            if (toggleBtn && sidebar) {
                toggleBtn.addEventListener('click', function (e) {
                    e.preventDefault();
                    sidebar.classList.toggle('active');
                });
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>