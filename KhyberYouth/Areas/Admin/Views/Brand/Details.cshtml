@model KhyberYouth.ViewModel.BrandDetailsViewModel

@{
    ViewData["Title"] = "Brand Details";
    // Using leading slash for reliable Dashboard path resolution
    var photoPath = "/images/" + (Model.ImagePath ?? "placeholder.png");
}

<style>
    .admin-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .brand-logo-bg {
        background:orange; /* White background is usually best for logos */
        padding: 60px 0;
        border-radius: 15px 15px 0 0;
        border-bottom: 1px solid #eee;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .brand-display-logo {
        max-width: 280px;
        max-height: 180px;
        object-fit: contain; /* Ensures logo isn't stretched or cropped */
        transition: transform 0.3s ease;
    }

        .brand-display-logo:hover {
            transform: scale(1.05);
        }

    .info-tile {
        background: #f8f9fa;
        padding: 25px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid #eee;
        height: 100%;
    }

        .info-tile i {
            font-size: 1.8rem;
            color: #ffc107;
            margin-bottom: 12px;
        }

        .info-tile label {
            display: block;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #6c757d;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .info-tile span {
            font-weight: 700;
            color: #212529;
            font-size: 1.1rem;
        }
</style>

<header class="theme-color text-white py-4 mb-5 shadow-sm">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-0">Admin Dashboard</h3>
            <p class="opacity-75 mb-0">Partner Management / Brand Details</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light fw-bold">
                <i class="fas fa-edit me-2"></i>Edit Brand
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</header>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card admin-card overflow-hidden">
                <div class="brand-logo-bg">
                    <img src="@photoPath"
                         class="brand-display-logo"
                         alt="@Model.Name Logo"
                         asp-append-version="true"
                         onerror="this.onerror=null;this.src='/images/placeholder.png';">
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="text-center mb-5">
                        <label class="text-muted small fw-bold text-uppercase tracking-wider">Partner Name</label>
                        <h1 class="fw-bold text-dark mt-1">@Model.Name</h1>
                    </div>

                    <hr class="my-5">

                    <div class="row g-4 justify-content-center">
                        <div class="col-md-5">
                            <div class="info-tile">
                                <i class="fas fa-certificate"></i>
                                <label>Brand Identity</label>
                                <span>@Model.Name</span>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="info-tile">
                                <i class="fas fa-fingerprint"></i>
                                <label>System ID</label>
                                <span>#@Model.Id</span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 pt-4 border-top d-flex justify-content-between align-items-center">
                        <p class="text-muted small mb-0">
                            <i class="fas fa-info-circle me-1"></i> This brand logo appears in the footer and partner sections of the website.
                        </p>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-danger px-3" onclick="return confirm('Permanently remove this brand?')">
                            <i class="fas fa-trash-alt me-1"></i> Delete Brand
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>