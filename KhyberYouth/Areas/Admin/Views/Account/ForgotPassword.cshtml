@model KhyberYouth.Identity.ForgotPasswordViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="text-center mb-0">Forgot Password?</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted text-center">Enter your email address to receive a password reset link.</p>

                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your registered email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-block">
                                <i class="bi bi-envelope-fill"></i> Submit Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>