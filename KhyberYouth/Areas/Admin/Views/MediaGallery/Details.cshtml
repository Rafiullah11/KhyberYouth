@model KhyberYouth.ViewModel.MediaGalleryDetailsViewModel

@{
    ViewData["Title"] = "Media Details";
    // Using leading slash for reliable Dashboard path resolution
    var photoPath = "/images/" + (Model.ImagePath ?? "placeholder.png");
}

<style>
    .admin-card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    }

    .media-spotlight-bg {
        background: #f1f1f1;
        padding: 30px;
        border-radius: 15px 15px 0 0;
        border-bottom: 1px solid #eee;
        text-align: center;
    }

    .media-display-img {
        max-width: 100%;
        max-height: 500px;
        border-radius: 10px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        object-fit: contain;
    }

    .info-tile {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        text-align: center;
        border: 1px solid #eee;
        height: 100%;
        transition: 0.3s;
    }

        .info-tile:hover {
            border-color: #ffc107;
            background: #fff;
        }

        .info-tile i {
            font-size: 1.5rem;
            color: #ffc107;
            margin-bottom: 10px;
        }

        .info-tile label {
            display: block;
            font-size: 0.75rem;
            text-transform: uppercase;
            color: #6c757d;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .info-tile span {
            font-weight: 600;
            color: #212529;
        }

    .description-box {
        background-color: #ffffff;
        border-left: 5px solid #ffc107;
        padding: 20px;
        border-radius: 0 12px 12px 0;
        font-style: italic;
    }
</style>

<header class="theme-color text-white py-4 mb-5 shadow-sm">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            <h3 class="mb-0">Admin Dashboard</h3>
            <p class="opacity-75 mb-0">Gallery Management / Media Asset Details</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light fw-bold">
                <i class="fas fa-edit me-2 text-warning"></i>Edit Media
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="fas fa-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>
</header>

<div class="container pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="card admin-card overflow-hidden">
                <div class="media-spotlight-bg">
                    <img src="@photoPath"
                         class="media-display-img"
                         alt="@Model.Title"
                         asp-append-version="true"
                         onerror="this.onerror=null;this.src='/images/placeholder.png';">
                </div>

                <div class="card-body p-4 p-md-5">
                    <div class="row align-items-center mb-5">
                        <div class="col-md-12">
                            <label class="text-muted small fw-bold text-uppercase">Asset Title</label>
                            <h1 class="fw-bold text-dark mt-1">@Model.Title</h1>
                        </div>
                    </div>

                    <hr class="my-5">

                    <div class="row g-4 mb-5">
                        <div class="col-md-4 col-12">
                            <div class="info-tile">
                                <i class="fas fa-photo-video"></i>
                                <label>Media Type</label>
                                <span>Gallery Image</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="info-tile">
                                <i class="fas fa-hashtag"></i>
                                <label>Asset ID</label>
                                <span>#@Model.Id</span>
                            </div>
                        </div>
                        <div class="col-md-4 col-12">
                            <div class="info-tile">
                                <i class="fas fa-calendar-alt"></i>
                                <label>Status</label>
                                <span class="text-success">Published</span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <h5 class="fw-bold mb-3"><i class="fas fa-align-left text-warning me-2"></i>Caption / Description</h5>
                            <div class="description-box shadow-sm border">
                                @(string.IsNullOrEmpty(Model.Description) ? "No description provided for this media asset." : Model.Description)
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>