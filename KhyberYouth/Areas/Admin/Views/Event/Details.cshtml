@model KhyberYouth.Models.Event


<div class="container">
    <h2>Event Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd-MM-yyyy HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate?.ToString("dd-MM-yyyy HH:mm")</dd>
    </dl>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>