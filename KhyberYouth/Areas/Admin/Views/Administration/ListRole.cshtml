@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>


<div class="row ">
    <div class="col-lg-9">
        <h3 class="text-primary mb-4">List Of Roles</h3>

    </div>

    <div class="col-3 text-end padding-right">

        <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary mb-3 ">
            Add New Role
        </a>

    </div>
    <hr />
</div>
@foreach (var role in Model)
{
    <div class="border pb-2">
        <div class="card-header">
            <strong>RoleId</strong>  : @role.Id
        </div>
        <div class="card-body">
            <strong>Role Name</strong>  : @role.Name
        </div>
        <div class="card-footer">
            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Edit</a>
                <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want delete @role.Name')">Delete</button>
            </form>
        </div>
    </div>
}