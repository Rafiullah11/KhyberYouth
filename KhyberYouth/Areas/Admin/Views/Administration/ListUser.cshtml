@using KhyberYouth.Identity
@model IEnumerable<ApplicationUser>



@if (Model.Any())
{
    <div class="row ">
        <div class="col-lg-9">
            <h3 class="text-primary mb-4">User List</h3>

        </div>

        <div class="col-3 text-end padding-right">

            <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3 ">
                Add New Record
            </a>

        </div>
        <hr />
    </div>

    foreach (var user in Model)
    {
        <div class="card">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h3 class="card-title">
                    User Name : @user.UserName
                </h3>
            </div>
            <div class="card-header">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@user.Id" class="btn btn-primary">Edit</a>
                <button type="submit" class="btn btn-danger" 
                        onclick="return confirm('Are you sure you want delete @user.UserName')">Delete</button>
                 </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            no record found
        </div>
        <div class="card-body">
            <h3 class="card-title">
                click on the button to create record
            </h3>
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary">
                Add new user
            </a>
        </div>

    </div>
}